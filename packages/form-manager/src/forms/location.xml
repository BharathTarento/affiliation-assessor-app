<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:jr="http://openrosa.org/javarosa"
    xmlns:odk="http://www.opendatakit.org/xforms"
    xmlns:orx="http://openrosa.org/xforms"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>Geopoint</h:title>
        <model odk:xforms-version="1.0.0">
            <instance>
                <data id="geo_location" version="1.1">
                    <Location>
                        <geo_code/>
                    </Location>
                    <meta>
                        <instanceID/>
                    </meta>
                </data>
            </instance>
            <bind jr:constraintMsg="You are not within 500 m of the institute. Please reach the institute and then fill the form" nodeset="/data/Location/geo_code" required="true()" type="geopoint"/>
            <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
        </model>
    </h:head>
    <h:body class="pages">
        <group appearance="field-list" ref="/data/Location">
            <label>Basic Infrastructure</label>
            <input appearance="none" ref="/data/Location/geo_code">
                <label>Please capture your location</label>
            </input>
        </group>
    </h:body>
</h:html>