nd nodeset="/data/intro/step18" required="true()" type="string"/><bind nodeset="/data/intro/step19" required="true()" type="string"/><bind nodeset="/data/intro/step20" required="true()" type="string"/><bind nodeset="/data/intro/step21" required="true()" type="string"/><bind nodeset="/data/intro/step22" type="string"/><bind nodeset="/data/intro/step23" type="string"/><bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/></model></h:head><h:body class="pages"><group appearance="field-list" ref="/data/intro"><select1 appearance="label" ref="/data/intro/reserved_name_for_field_list_labels_3"><label> </label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step1"><label>Ensure that X-ray films, IVP results and bleeding parameters are available before the procedure</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step2"><label>Explain the procedure and get consent</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step3"><label>Assemble equipment on trolley in treatment room</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step4"><label>Take patient to treatment room</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step5"><label>Assist patient to lie in prone position</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step6"><label>Place sand bag or firm pillow under abdomen</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step7"><label>Assist in cleaning area with antiseptic and draping the site with sterile towel</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step8"><label>Assist in local infiltration with 2% xylocaine</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step9"><label>Assist in making small stab incision through skin and inserting biopsy needle</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step10"><label>Instruct the patient to take a deep breath and hold it while biopsy is being taken</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step11"><label>Reassure the patient while doctor removes the needle</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step12"><label>Place dry sterile gauze over the site and fix with broad adhesive strip</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step13"><label>Turn the patient to supine position slowly and make him/her comfortable</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step14"><label>Preserve biopsy specimen in formalin bottle/wet gauze/blotting paper and label it</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step15"><label>Replace equipment</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step16"><label>Document the time of biopsy, success of procedure, the patient's condition and vital signs</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step17"><label>Post procedure care After half an hour, transfer patient from treatment room to bed on stretcher</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step18"><label>Explain to the patient about the need for strict bed rest for 24 hours and to avoid coughing or sneezing</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step19"><label>Check vital signs, BP, pulse and respiratory rate every 1/4th h for first 1hr, every Â½ h for next 2 hours and every hour for next 3 hours</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step20"><label>Instruct the patient to drink at least 2000-3000ml of fluid in next few hours</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step21"><label>Give three small, labelled bottles to collect the first three urine specimens</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step22"><label>Inform doctor in case of hematuria, drop in BP, rise in pulse rate, abdominal pain or any unusual symptoms</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1><select1 appearance="list-nolabel" ref="/data/intro/step23"><label>Check biopsy site periodically. Assess for tightness of adhesive and take appropriate action</label><item><label>Done</label><value>done</value></item><item><label>Not Done</label><value>not</value></item></select1></group></h:body></h:html>